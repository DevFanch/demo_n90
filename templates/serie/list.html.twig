{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() ~ ' - ' ~ 'Les Séries' }}
{% endblock %}

{% block body %}
    Liste des séries

    <section class="series-list">
        {% for serie in series %}
            <article>
                <a href="{{ path('serie_detail', {'id': serie.id}) }}" title="View series's details">
                    <img src="{{ asset("img/posters/series/" ~ serie.poster) }}" alt="{{ serie.name }}">
                </a>
            </article>
        {% endfor %}
    </section>
{% endblock %}
